// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          String    @default("INTERN")
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  nip           String?   // NIP Pegawai
  jabatan       String?   // Jabatan Struktural

  internProfile InternProfile?
  attendance    Attendance[]
  leaveRequests LeaveRequest[] 
}

model InternProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  
  startDate   DateTime 
  endDate     DateTime 
  // startHour & endHour HARUS SUDAH GAK ADA DI SINI
}

model Attendance {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  date      DateTime // Tanggal doang (jam 00:00:00)
  time      String   // Jam doang (Format "07:30") <-- INI YANG DITUNGGU SAMA LOG.TIME
  status    String   // HADIR, TELAT, dll
  
  createdAt DateTime @default(now())

  @@unique([userId, date])
}

model Announcement {
  id        String   @id @default(cuid())
  title     String   // Judul: "Apel Pagi", "Libur Lebaran"
  content   String   @db.Text // Isi pengumuman panjang
  isActive  Boolean  @default(true) // Bisa di-unpublish kalo udah ga relevan
  createdAt DateTime @default(now())
}

model LeaveRequest {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  date      DateTime // Tanggal Izin (Satu hari spesifik)
  reason    String   @db.Text
  proofFile String?  // Nama file bukti (Opsional, jaga-jaga kalo izin biasa gapake surat)
  status    String   @default("PENDING")
  
  createdAt DateTime @default(now())
}

model NotificationDismissal {
  id        String   @id @default(cuid())
  refId     String   // ID dari LeaveRequest atau User yang notifnya dibuang
  type      String   // "IZIN" atau "USER"
  createdAt DateTime @default(now())

  @@unique([refId, type]) // Biar gak duplikat
}


