// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model User buat Login (Bisa Admin, Bisa Anak Magang)
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  role          String    @default("INTERN") // Values: "ADMIN" or "INTERN"
  createdAt     DateTime  @default(now())
  
  // Relasi
  internProfile InternProfile?
  attendances   Attendance[]
}

// Data detail khusus Anak Magang (Settingan Admin)
model InternProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  
  startDate   DateTime // Tanggal mulai magang
  endDate     DateTime // Tanggal selesai magang
  startHour   String   // Jam mulai absen (contoh: "07:00")
  endHour     String   // Jam telat absen (contoh: "08:00")
}

model Attendance {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  date      DateTime // Tanggal doang (jam 00:00:00)
  time      String   // Jam doang (Format "07:30") <-- INI YANG DITUNGGU SAMA LOG.TIME
  status    String   // HADIR, TELAT, dll
  
  createdAt DateTime @default(now())

  @@unique([userId, date])
}

model Announcement {
  id        String   @id @default(cuid())
  title     String   // Judul: "Apel Pagi", "Libur Lebaran"
  content   String   @db.Text // Isi pengumuman panjang
  isActive  Boolean  @default(true) // Bisa di-unpublish kalo udah ga relevan
  createdAt DateTime @default(now())
}

