// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String
  role          String    @default("INTERN")
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  nip           String?   // NIP Pegawai
  jabatan       String?   // Jabatan Struktural

  internProfile InternProfile?
  attendance    Attendance[]
  leaveRequests LeaveRequest[] 
  finalEvaluation FinalEvaluation?
}

model InternProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  
  startDate   DateTime 
  endDate     DateTime 
  // startHour & endHour HARUS SUDAH GAK ADA DI SINI
}

model Attendance {
  id        String   @id @default(cuid())
  userId    String
  date      DateTime
  time      String   // Ini kita anggap Time IN
  timeOut   String?  // TAMBAHAN: Ini Time OUT (Boleh kosong)
  status    String   // HADIR, TELAT, IZIN
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // Tambahin ini biar rapi tracking updatenya

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Announcement {
  id        String   @id @default(cuid())
  title     String   // Judul: "Apel Pagi", "Libur Lebaran"
  content   String   @db.Text // Isi pengumuman panjang
  isActive  Boolean  @default(true) // Bisa di-unpublish kalo udah ga relevan
  createdAt DateTime @default(now())
}

model LeaveRequest {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  date      DateTime // Tanggal Izin (Satu hari spesifik)
  reason    String   @db.Text
  proofFile String?  // Nama file bukti (Opsional, jaga-jaga kalo izin biasa gapake surat)
  status    String   @default("PENDING")
  
  createdAt DateTime @default(now())
}

model NotificationDismissal {
  id        String   @id @default(cuid())
  refId     String   // ID dari LeaveRequest atau User yang notifnya dibuang
  type      String   // "IZIN" atau "USER"
  createdAt DateTime @default(now())

  @@unique([refId, type]) // Biar gak duplikat
}

model FinalEvaluation {
  id                  String   @id @default(cuid())
  userId              String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // -- DIISI OLEH USER --
  pekerjaan           String   @db.Text 
  deskripsi           String   @db.Text 
  
  // -- DIISI OLEH ADMIN --
  nilaiDisiplin       Int?
  nilaiTanggungJawab  Int?
  nilaiInisiatif      Int?
  nilaiKerjasama      Int?
  nilaiKualitas       Int?
  rataRata            Float?
  
  status              String   @default("PENDING") // PENDING (Nunggu dinilai), GRADED (Selesai dinilai)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}